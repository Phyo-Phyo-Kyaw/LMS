<div class="container mt-5">
	<!-- Header Section -->
	<div class="card shadow mb-5">
		<div class="card-header d-flex justify-content-between align-items-center">
			<h1 class="mb-0">üìö Library Management System</h1>
			<button class="btn btn-light" data-bs-toggle="modal" data-bs-target="#addBookModal">+ Add Book</button>
		</div>
		
		<!-- Books Table -->
		<div class="card-body">
			<div class="table-responsive">
				<table class="table table-hover table-striped align-middle">
					<thead class="table-primary">
						<tr>
							<th>Book Name</th>
							<th>Author</th>
							<th>Pages</th>
							<th>Price</th>
							<th>Availability</th>
							<th class="action-btns">Actions</th>
						</tr>
					</thead>
					<tbody>
						<% data.forEach(element => { %>
							<tr class="hover-shadow">
								<td><%= element.bookName %></td>
								<td><%= element.bookAuthor %></td>
								<td><%= element.bookPages %></td>
								<td>$<%= element.bookPrice %></td>
								<td>
									<span class="badge <%= element.bookState === 'Available' ? 'bg-success' : 'bg-danger' %>">
										<%= element.bookState %>
									</span>
								</td>
								<td>
									<div class="d-flex gap-2">
										<a href="/book/issue/<%= element.bookID %>" class="btn btn-sm btn-primary">Issue</a>
										<a href="/book/return/<%= element.bookID %>" class="btn btn-sm btn-secondary">Return</a>
										<button class="btn btn-sm btn-warning" 
											onclick="openModal(<%= element.bookID %>, '<%= element.bookName %>', '<%= element.bookAuthor %>', <%= element.bookPages %>, <%= element.bookPrice %>)">
											Edit
										</button>
										<td>
											<button class="btn btn-sm btn-danger" 
													data-bs-toggle="modal" 
													data-bs-target="#deleteBookModal"
													data-book-id="<%= element.bookID %>"
													data-book-name="<%= element.bookName %>">
												Delete
											</button>
										</td>
									</div>
								</td>
							</tr>
						<% }); %>
					</tbody>
				</table>
			</div>
		</div>
	</div>

	<!-- Add Book Modal -->
	<div class="modal fade" id="addBookModal" tabindex="-1">
		<div class="modal-dialog">
			<div class="modal-content">
				<div class="modal-header bg-primary text-white">
					<h5 class="modal-title">Add New Book</h5>
					<button type="button" class="btn-close" data-bs-dismiss="modal"></button>
				</div>
				<div class="modal-body">
					<form action="/book" method="post">
						<div class="row g-3">
							<div class="col-12">
								<label class="form-label">Book Name</label>
								<input type="text" name="bookName" class="form-control" required>
							</div>
							<div class="col-md-6">
								<label class="form-label">Author</label>
								<input type="text" name="bookAuthor" class="form-control" required>
							</div>
							<div class="col-md-3">
								<label class="form-label">Pages</label>
								<input type="number" name="bookPages" class="form-control" required>
							</div>
							<div class="col-md-3">
								<label class="form-label">Price</label>
								<input type="number" step="0.01" name="bookPrice" class="form-control" required>
							</div>
							<div class="col-12">
								<button type="submit" class="btn btn-primary w-100">Add Book</button>
							</div>
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>

	<!-- Update Book Modal -->
	<div class="modal fade" id="updateModal" tabindex="-1" aria-labelledby="updateModalLabel" aria-hidden="true">
		<div class="modal-dialog modal-lg">
			<div class="modal-content">
				<div class="modal-header bg-warning text-dark">
					<h5 class="modal-title">üìñ Edit Book Details</h5>
					<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
				</div>
				<div class="modal-body">
					<form id="updateForm" method="POST" class="needs-validation" novalidate>
						<input type="hidden" id="bookID" name="bookID">
						
						<div class="row g-3">
							<div class="col-md-12">
								<label for="bookName" class="form-label">Book Title</label>
								<input type="text" class="form-control" id="bookName" name="bookName" required>
								<div class="invalid-feedback">Please enter a book title.</div>
							</div>
							
							<div class="col-md-12">
								<label for="bookAuthor" class="form-label">Author</label>
								<input type="text" class="form-control" id="bookAuthor" name="bookAuthor" required>
								<div class="invalid-feedback">Please enter the author's name.</div>
							</div>
							
							<div class="col-md-6">
								<label for="bookPages" class="form-label">Page Count</label>
								<div class="input-group">
									<input type="number" class="form-control" id="bookPages" name="bookPages" min="1" required>
									<span class="input-group-text">pages</span>
								</div>
								<div class="invalid-feedback">Please enter a valid page count.</div>
							</div>
							
							<div class="col-md-6">
								<label for="bookPrice" class="form-label">Price</label>
								<div class="input-group">
									<span class="input-group-text">$</span>
									<input type="number" class="form-control" id="bookPrice" name="bookPrice" 
										step="0.01" min="0" required>
								</div>
								<div class="invalid-feedback">Please enter a valid price.</div>
							</div>
							<div class="col-md-6">
								<button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
							</div>
							<div class="col-md-6">
								<button type="submit" class="btn btn-warning">Save Changes</button>
							</div>
						</div>
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>

	<!-- Delete Confirmation Modal -->
	<div class="modal fade" id="deleteBookModal" tabindex="-1" aria-labelledby="deleteBookModalLabel" aria-hidden="true">
		<div class="modal-dialog">
			<div class="modal-content">
				<div class="modal-header bg-danger text-white">
					<h5 class="modal-title">‚ö†Ô∏è Delete Book</h5>
					<button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
				</div>
				<div class="modal-body">
					<p>Are you sure you want to delete <strong id="bookTitle"></strong>?</p>
					<p class="text-muted">This action cannot be undone.</p>
				</div>
				<div class="modal-footer">
					<button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
					<form id="deleteForm" method="POST" style="display: inline;">
						<button type="submit" class="btn btn-danger">Delete Permanently</button>
					</form>
				</div>
			</div>
		</div>
	</div>
</div>
